{
  "name": "professor-backend",
  "version": "0.0.1",
  "description": "Serviço para concentração de informações de turmas de professores.",
  "author": "gcampos@ciandt.com",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "template-crud": "node script-template-crud.js",
    "install": "npx husky install && cd tests/component || exit 0 && npm i",
    "audit": "npm run audit:root && npm run audit:tests-component",
    "audit:root": "npm audit --audit-level=high --registry=https://registry.npmjs.org/",
    "audit:tests-component": "cd tests/component && npm run audit",
    "ncu": "ncu --interactive --format group",
    "nest": "npm run nest",
    "prebuild": "rimraf dist build coverage",
    "build": "tsc --build tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "sonar": "npx sonar-scanner",
    "lint": "npm run lint:root && npm run lint:tests-component",
    "lint:root": "eslint \"{src,tests}/**/*.ts\" --fix",
    "lint:tests-component": "cd tests/component && npm run lint",
    "start": "export NODE_ENV=local && node dist/main.js",
    "start:dev": "ts-node-dev src/main.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node -r elastic-apm-node/start dist/main.js",
    "docker": "CURRENT_UID=$(id -u):$(id -g) docker compose -f docker-compose.yml up component-api",
    "docker:audit:fargate": "docker scan $(node -e \"console.log(require('./package.json').name)\"):fargate",
    "docker:audit": "npm run docker:audit:fargate",
    "docker:sonar": "docker run --rm --user=\"$(id -u):$(id -g)\" -it -v \"$(pwd):/usr/src\" -e SONAR_HOST_URL=\"${SONARQUBE_URL}\"  sonarsource/sonar-scanner-cli sonar-scanner -X",
    "docker:build:fargate": "$(node prepare-npmrc fargate fargate,latest)",
    "docker:build:unit-tests": "$(node prepare-npmrc unit-tests unit-tests)",
    "docker:build": "npm run docker:build:fargate",
    "docker:down": "CURRENT_UID=$(id -u):$(id -g) docker compose down",
    "test": "jest --verbose --silent false --logHeapUsage --maxWorkers=1 --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --logHeapUsage --maxWorkers=1 --forceExit --passWithNoTests --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:unit:run": "CURRENT_UID=$(id -u):$(id -g) npm run test:unit:run-docker",
    "test:unit:run-docker": "docker run --rm -e CURRENT_UID=$CURRENT_UID -m 2GB -v \"$(pwd)/coverage:/opt/microservice/coverage\" $(node -e \"console.log(require('./package.json').name)\"):unit-tests",
    "test:unit:prepare": "CURRENT_UID=$(id -u):$(id -g) npm run docker:build:unit-tests",
    "test:unit:chown": "chown -R $CURRENT_UID coverage",
    "test:unit:npm": "npm run test:cov --reporters=default --reporters=jest-junit",
    "pretest:unit": "npm run test:instances:pull:node-bullseye",
    "test:unit": "npm run test:unit:prepare && npm run test:unit:run",
    "test:statics": "concurrently npm:lint npm:audit npm:test:unit",
    "pretest:dynamics": "npm run test:instances:pull",
    "test:dynamics": "npm run test:component && npm run test:performance && npm run test:security",
    "precommit": "npm run test:statics",
    "prepush": "concurrently npm:test:instances:down npm:test:instances:pull && npm run test:component"
  },
  "engines": {
    "node": "20",
    "npm": "10"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.2",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.9",
    "@nestjs/microservices": "^10.3.9",
    "@nestjs/mongoose": "^10.0.6",
    "@nestjs/platform-express": "^10.4.6",
    "@nestjs/platform-fastify": "^10.3.9",
    "aws4": "^1.13.0",
    "axios": "^1.7.2",
    "cache-manager": "^5.7.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "js-yaml": "^4.1.0",
    "luxon": "^3.4.4",
    "mongoose": "^8.4.4",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.9",
    "@types/jest": "29.5.14",
    "@types/luxon": "^3.4.2",
    "@types/node": "20.14.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "29.7.0",
    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^3.0.7",
    "mongodb": "^6.8.0",
    "mongodb-memory-server": "^9.4.0",
    "npm-check-updates": "^16.14.20",
    "prettier": "^3.3.2",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "29.1.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.5.2"
  },
  "overrides": {
    "formidable": "3.5.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "main.ts",
      "index.ts",
      ".spec.ts",
      ".config.ts",
      ".module.ts",
      ".types.ts",
      ".fixture.ts",
      ".model.ts"
    ],
    "reporters": [
      "default"
    ]
  }
}
